#!/usr/local/bin/xs -f
// vim: et ts=4 sw=4 ft=ron
Script([
    Let ("Edit-Script",
        Expr (r####"
            Script([
                Exec (output: Display,
                    cmd: "fish",
                    args: [
                        "--init-command",
                        "source etc/env/dev.fish"
                    ],
                ),
            ])
        "####)
    ),

    Let ("box.alpine", Expr ("vm.alpine4")),

    Exec (output: Display,
        cmd: "tmux",
        args: [
            "new-session", "-A",
                "-n", "Edit",
                "-s", "ct",
                // .4
                "xs", "-c", (var: "Edit-Script"),
            ";",
            "split-window", "-h",
                "-t", "ct:Edit.0",
                "-d",
                // .5
                "xs", "-f", "dev_exec/::sanctioned/dev:entr.loop",
            ";",
            "split-window", "-h", "-b",
                "-t", "ct:Edit.0",
                "-d",
                // .0
                "xs", "--error-server",
            ";",
            "split-window", "-v",
                "-t", "ct:Edit.0",
                "-l", "5",
                "-d",
                // .3
                "xs", "-c", r####"Script([
                    Exec (output: Display,
                        cmd: "darkhttpd",
                        args: [".", "--addr", "0.0.0.0", "--port", "5001"],
                        cwd: Some("_.artifact"),
                    )
                ])"####,
            ";",
            "split-window", "-v",
                "-t", "ct:Edit.0",
                "-l", "8",
                "-d",
                // .2
                "xs",
                    "-ah", "box", (var: "box.alpine"),
                    "-c", r####"Script([
                        Exec (output: Display,
                            cmd: "xs",
                            args: [
                                "-f", "dev_exec/::sanctioned/vagrant:ssh",
                                "-ah", "box", (var: "box"),
                            ],
                        )
                    ])"####,
            ";",
            "split-window", "-v",
                "-t", "ct:Edit.0",
                "-l", "8",
                "-d",
                // .1
                "htop",
            ";",
            "resize-pane",
                "-t", "ct:Edit.0",
                "-x", "23%",
            ";",
            "resize-pane",
                "-t", "ct:Edit.5",
                "-x", "23%",
            ";",
            "set-option",
                "-t", "ct:Edit.3",
                "remain-on-exit", "on",
            ";",
            "bind-key",
                "-T", "root",
                "C-f",
                    "send-key",
                        "-t", "ct:Edit.3",
                        "Space",
            ";",
            "send-keys",
                "-t", "ct:Edit.2", // ssh vm.alpine
                "htop", "Enter",
            ";",
        ],
    ),
])//Script
